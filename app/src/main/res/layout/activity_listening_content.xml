<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/rl_listenning_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wall1"
        android:orientation="vertical">

        <TextView
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/numQues"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="25sp"
            android:text="CÃ¢u 1"/>

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnListening"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/hear1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvSoLanNghe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:text="2"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25sp"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tvQuestionLis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            android:textColor="@color/white"/>

        <Button
            android:layout_gravity="center"
            android:gravity="center_vertical|left"
            android:text="dfsd"
            android:textColor="#000000"
            android:textStyle="italic|bold"
            android:textSize="11sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_answer"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:maxLines="3"
            android:id="@+id/listening_yA"/>
        <Button
            android:layout_gravity="center"
            android:gravity="center_vertical|left"
            android:text="dfsd"
            android:textColor="#000000"
            android:textStyle="italic|bold"
            android:textSize="11sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_answer"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:maxLines="3"
            android:id="@+id/listening_yB"/>
        <Button
            android:layout_gravity="center"
            android:gravity="center_vertical|left"
            android:text="dfsd"
            android:textColor="#000000"
            android:textStyle="italic|bold"
            android:textSize="11sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_answer"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:maxLines="3"
            android:id="@+id/listening_yC"/>
        <Button
            android:layout_gravity="center"
            android:gravity="center_vertical|left"
            android:text="dfsd"
            android:textColor="#000000"
            android:textStyle="italic|bold"
            android:textSize="11sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_answer"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:maxLines="3"
            android:id="@+id/listening_yD"/>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:visibility="visible"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="15"
                android:textColor="#ff0000"
                android:background="@drawable/button_answer"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/tvLisCountDown"/>
            <Button
                android:visibility="visible"
                android:id="@+id/btn_ok_lis"
                android:textColor="#ff0000"
                android:background="@drawable/button_answer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="OK"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <Button
                android:visibility="gone"
                android:id="@+id/btn_continue_lis"
                android:textColor="#ff0000"
                android:background="@drawable/button"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="continue"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <Button

                android:visibility="gone"
                android:id="@+id/btn_next_lis"
                android:textColor="#ff0000"
                android:background="@drawable/button_answer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="NEXT"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:layout_gravity="right"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:text="Don't save"
                android:id="@+id/btn_dont_save_lis"
                android:textColor="#ff0000"
                android:background="@drawable/button_answer"
                android:layout_width="100dp"
                android:layout_height="30dp" />

            <Button
                android:layout_gravity="right"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:text="Save"
                android:id="@+id/btn_save_lis"
                android:textColor="#ff0000"
                android:background="@drawable/button_answer"
                android:layout_width="100dp"
                android:layout_height="30dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>