<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <FrameLayout
        android:layout_width="230dp"
        android:layout_height="250dp"
        android:layout_gravity="center">
        <ImageView
            android:src="@drawable/ic_default_man"
            android:background="@color/white"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:id="@+id/imgUser"
            android:layout_gravity="center"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/chooseImageFromGallery"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/gallery" />

            <Button
                android:id="@+id/usingCamera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/camera" />

        </RelativeLayout>
    </FrameLayout>
    <View
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#002aff"></View>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:weightSum="151"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="85"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GRAMMAR"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/userGrammarTense"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Tense: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/userGrammarPassiveVoice"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Passive voice: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/userGrammarGerundAndToVerb"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Gerund and to verb: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </LinearLayout>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#002aff"></View>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="65"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LISTENING"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_user_listening"
                android:layout_marginTop="20dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:text="15"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>




</LinearLayout>