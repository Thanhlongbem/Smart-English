<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:padding="15dp"
        android:background="@drawable/bg_note_07"
        android:visibility="visible"
        android:id="@+id/ln_front_grm"
        android:weightSum="9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="30sp"
            android:text="Are you ready?"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:background="@color/white"
            android:text="fdslhfsdlfjdskfjdsfj;dsfdsflds"
            android:id="@+id/tvInsistence"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:layout_weight="0.8"
            android:id="@+id/btn_start_test"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_gravity="center|center_horizontal"
            android:background="@drawable/button_answer"
            android:gravity="center|center_horizontal"
            android:text="Start"
            android:textColor="#111111"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.2"/>

    </LinearLayout>

</LinearLayout>