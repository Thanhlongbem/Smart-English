<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:padding="15dp"
        android:background="@drawable/bg_note_07"
        android:visibility="visible"
        android:gravity="center"
        android:id="@+id/lnChooseTypeGrammar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="You need choose type of grammar to continue"/>

        <Button
            android:id="@+id/btnTenseGRM"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Tense"/>
        <Button
            android:id="@+id/btnPassiveVoiceGRM"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Passive voice"/>
        <Button
            android:id="@+id/btnGerundToVerbGRM"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Gerund To Verb"/>
        <Button
            android:id="@+id/btnRelativeClauseGRM"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Relative Clause"/>





        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
    </LinearLayout>








</LinearLayout>